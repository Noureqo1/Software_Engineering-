@page
@model SW.Pages.Pages.SignUpModel
@{
}

<style>
    body {
        background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
        background-repeat: no-repeat;
        background-size: cover;
        padding: 0;
        margin: 0;
        max-width: 100%;
    }
</style>

<div style="height: 1000px;">
    <!-- Content goes here -->
    <section class="vh-100 gradient-custom">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                                <form method="post">
                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example1cg" name="User.Name" asp-for="@Model.User.Name" class="form-control" />
                                        <label class="form-label" for="form3Example1cg">Your Name</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="email" id="form3Example3cg" name="User.Email" asp-for="@Model.User.Email" class="form-control" />
                                        <label class="form-label" for="form3Example3cg">Your Email</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="tel" id="form3Example5cdg" name="User.PhoneNumber" asp-for="@Model.User.PhoneNumber" class="form-control" />
                                        <label class="form-label" for="form3Example5cdg">Phone Number</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form3Example4cg" name="User.Password" asp-for="@Model.User.Password" class="form-control" />
                                        <label class="form-label" for="form3Example4cg">Password</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form3Example4cdg" name="User.ConfirmPassword" asp-for="@Model.User.ConfirmPassword" class="form-control" />
                                        <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                                    </div>
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                        <label class="form-check-label" for="form2Example3g">
                                            I agree to all statements in <a href="#!" class="text-white-50 fw-bold"><u>Terms of service</u></a>
                                        </label>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                    </div>
                                    <p class="text-center text-muted mt-5 mb-0">
                                        Already have an account? <a href="https://localhost:7031/Login" class="text-white-50 fw-bold"><u>Login here</u></a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@{
    ViewData["Title"] = "Sign Up";
}